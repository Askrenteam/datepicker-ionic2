{
    "compilerOptions": {
        "noImplicitAny": true,
        "declaration": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "lib": [
            "dom",
            "es2015"
        ],
        "module": "es2015",
        "moduleResolution": "node",
        "removeComments": true,
        "sourceMap": true,
        "target": "es5",
        "outDir": "dist"
    },
    "exclude": [
        "node_modules",
        "dist",
        "scripts",
        "demo"
    ],
    "include": [
        "src"
    ],
    "angularCompilerOptions": {
        "genDir": "aot",
        "skipMetadataEmit": true
    }
}